<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.Primary</item>
        <item name="materialCardViewStyle">@style/Widget.MaterialComponents.CardView</item>
    </style>

    <style name="Image">
        <item name="placeholderImage">@drawable/ic48_photo_place_holder</item>
        <item name="placeholderImageScaleType">fitXY</item>
        <item name="actualImageScaleType">centerCrop</item>
        <item name="fadeDuration">100</item>
    </style>

    <style name="Image.Circle">
        <item name="roundAsCircle">true</item>
    </style>
</resources>
